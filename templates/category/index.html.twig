{% extends 'base.html.twig' %}

{% block title %}All category{% endblock %}

{% block body %}
    <h1>Toutes les catégories de la table category : </h1>
    {% for category in categories %}
        <div>
            <h2>{{ loop.index }} / {{ category.title }} - Catégorie : {{ program.category.name }}</h2>
            {# Lien vers la fiche de la série : #}
            <a href="{{ path("category_index", { categoryName }) }}">Voir la fiche</a>
        </div>
    {% else %}
        Aucune catégorie trouvée.
    {% endfor %}

    <a href="{{ path('app_index') }}">
        Retour à l'accueil
    </a>
{% endblock %}
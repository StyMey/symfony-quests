{% extends 'base.html.twig' %}

{% block title %}
Episodes
{% endblock %}

{% block body %}
    <div class="media">
        <div class="media-body">
            <h1 class="mt-0">{{ program.title }}</h1>
            <p>Saison {{ season.number }}</p>
        </div>
        <h2>Episodes disponibles:</h2>
            <ul>
            {% for episode in season.episodes %}
                <li>Episode {{ episode.number }}: {{ episode.title }}</li>
                <li>Synopsis: {{ episode.synopsis }}</li>
            {% endfor %}
            </ul>
    </div>

    <a href="{{ path('program_index') }}">
        Retour Ã  la liste des programmes
    </a>
{% endblock %}